@model Natusa.ViewModel.FlightsViewModel
@using Natusa.Models

@{
    ViewBag.Title = "Search";
}
<link href="~/CSS/SearchStyle.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/SearchScript.js"></script>


<h2>SearchView</h2>
<div id="searchPage">
    <form action="SearchResults" method="post">
        <span class="searchInput">
            <input autocomplete="country" type="text" id="fromCountry" name="fromCountry" placeholder="From?" size="20" />
            <input autocomplete="country" type="text" id="toCountry" name="toCountry" placeholder="To?" size="20" />
            <input type="text" id="depDate" name="depDate" placeholder="When?" size="12" onfocus="(this.type='date')" onblur="(this.type='text')" />
            <input type="text" id="depTime" name="depTime" placeholder="At?" size="5" onfocus="(this.type='time')" onblur="(this.type='text')" />
        </span>
        <br><br />
        <span>
            <input type="radio" checked="checked" name="wayRadio" value="oneWay">
            One Way
            &nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="radio" name="wayRadio" value="bothWay">
            Both Way
        </span>
        <br><br />
        <span class="searchInput returnInput">
            <input type="text" id="retDate" name="retDate" placeholder="When to return?" size="12" onfocus="(this.type='date')" onblur="(this.type='text')" />
            <input type="text" id="retTime" name="retTime" placeholder="Return at?" size="5" onfocus="(this.type='time')" onblur="(this.type='text')" />
        </span>
        <button type="submit" id="searchBtn"><img src="~/Content/search-btn.png" alt="search" border="0" /> </button>
    </form>

    <br><br />
    <hr />
    <br><br />
    <table id="flightSearchResults">
        <tr id="tableHeaders">
            <th><u>Flight ID</u></th>
            <th><u>Origin</u></th>
            <th><u>Date</u></th>
            <th><u>Departure</u></th>
            <th><u>Destination</u></th>
            <th><u>Price</u></th>
            <th><u></u></th>
        </tr>

        <tr id="tableResults">
            <form action="Booking" method="post">
                <td><input type="text" id="flightID" name="flightID" value="RS851" size="10" readonly/> </td>
                <td><input type="text" id="originRes" name="originRes" value="ISRAEL" size="10" readonly /></td>
                <td><input type="text" id="dateRes" name="dateRes" value="22/12/2022" size="10" readonly /></td>
                <td><input type="text" id="timeRes" name="timeRes" value="02:25" size="10" readonly /></td>
                <td><input type="text" id="destRes" name="destRes" value="GERMANY" size="10" readonly /></td>
                <td><input type="text" id="priceRes" name="priceRes" value="150$" size="10" readonly /></td>
                <td><input type="submit" id="selectFlight" value="SELECT" /></td>
            </form>
        </tr>
    </table>
</div>